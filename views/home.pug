extends layout.pug

block content
    .columns
        .column.content
            .has-text-centered
                img(src='images/logo.png', alt='Sheriff', style='width: 20%')

                .columns.mtl
                    if !user
                        .column.is-4
                            a.button.is-primary(href='/github/login') Login with Github?

                        .column.is-4
                            a.button.is-primary(href='/gitlab/login') Login with Gitlab?

                        .column.is-4
                            a.button.is-primary(href='/bitbucket/login') Login with Bitbucket?
                    else
                        each feature in features
                            if !(user.provider === 'gitlab' && feature.name === 'reviews')
                                .column
                                    a.button.is-primary(href=feature.name)= feature.name
